generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        Int      @id @default(autoincrement())
  vkId      Int      @unique
  firstName String?
  lastName  String?
  createdAt DateTime @default(now())
  games     Game[]
}

model Game {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  status    String   @default("ACTIVE")
  board     String
  moves     Int      @default(0)
  createdAt DateTime @default(now())
}
